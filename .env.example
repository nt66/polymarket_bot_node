# Polymarket（从 polymarket.com 设置导出或 reveal 获取）
PRIVATE_KEY=
POLYMARKET_FUNDER_ADDRESS=
SIGNATURE_TYPE=2

# 可选：已有 API 凭证时可留空，否则用私钥自动 createOrDerive
# POLY_API_KEY=
# POLY_SECRET=
# POLY_PASSPHRASE=

# 策略开关（true/false）
STRATEGY_LATENCY_ARB=true
STRATEGY_NEG_RISK_ARB=true
STRATEGY_EV_ARB=true

# 延迟套利：OKX 单次 tick 跳动阈值（美元），超过才触发。也可用 LATENCY_MIN_JUMP_USD
LATENCY_PRICE_JUMP_THRESHOLD=50

# 负风险套利：YES+NO 买一价之和上限（小于 1 才买）
NEG_RISK_MAX_SUM=0.98

# 末日轮：最后多少秒内启动
EV_ARB_LAST_SECONDS=120

# 每笔下单金额控制（shares 数量，约等于 USDC）
ORDER_SIZE_MIN=5
ORDER_SIZE_MAX=50

# BTC 市场：15m 或 5m（5m 时自动用 btc-updown-5m-{slot}）
BTC_MARKET_MODE=5m
BTC_15MIN_TAG_ID=
BTC_15MIN_SLUG=

# === 巩固利润 / 加强利润（可选）===
# TREND 入场门槛：赢方 bid 至少多少才入场（越高=越少但越准，建议 0.65）
TREND_MIN_BID=0.65
# ENDGAME 入场：ask 不超过多少才买（越高=多接末日轮结算，建议 0.95）
ENDGAME_MAX_ASK=0.95
# 单市场最大占用 USDC（余额高时可调大，如 8 允许同市场两笔 5 张）
MAX_POSITION_PER_MARKET=8
# 单 15 分钟窗口最多几笔
MAX_TRADES_PER_WINDOW=2
